#include "ReadWriter.h"
#include <vector>

//iostream, fstream включены в ReadWriter.h
using namespace std;

int findMax(const int *array, int array_size);
int findMin(const int *array, int array_size);
void countingSort(int *numbers, int array_size);

int findMax(const int *array, int array_size) {
    int max = 0;
    for (int i = 0; i < array_size; i++) {
        if (array[i] > max) {
            max = array[i];
        }
    }
    return max;
}

int findMin(const int *array, int array_size) {
    int min = 0;
    for (int i = 0; i < array_size; i++) {
        if (array[i] < min) {
            min = array[i];
        }
    }
    return min;
}

// Функция сортировки подсчетом
void countingSort(int *numbers, int array_size) {
    int numberOfDiff = findMax(numbers, array_size) - findMin(numbers, array_size) + 1;
    vector<int> supportArr(numberOfDiff);
    vector<int> resArr(array_size);
    for (int i = 0; i < numberOfDiff; i++){
        supportArr[i] = 0;
    }
    for(int i = 0; i < array_size; i++){
        supportArr[numbers[i]] = supportArr[numbers[i]] + 1;
    }
    for(int i = 1; i < numberOfDiff; i++){
        supportArr[i] = supportArr[i] + supportArr[i - 1];
    }
    for(int i = array_size - 1; i >= 0; i--){
        resArr[supportArr[numbers[i]] - 1] = numbers[i];
        supportArr[numbers[i]] = supportArr[numbers[i]] - 1;
    }
    for(int i = 0; i < array_size; i++){
        numbers[i] = resArr[i];
    }
}

//Не удалять и не изменять метод main без крайней необходимости.
//Необходимо добавить комментарии, если все же пришлось изменить метод main.
int main() {
    //Объект для работы с файлами
    ReadWriter rw;

    int *brr = nullptr;
    int n;

    //Ввод из файла
    n = rw.readInt();

    brr = new int[n];
    rw.readArray(brr, n);

    //Запуск сортировки, ответ в том же массиве (brr)
    countingSort(brr, n);

    //Запись в файл
    rw.writeArray(brr, n);

    //освобождаем память
    delete[] brr;

    return 0;
}


